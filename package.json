{
  "name": "nitter-redirect",
  "description": "Ensures requests to X redirect to Nitter (a privacy friendly alternative), via a regex-based declarative ruleset (no client-side scripts).",
  "version": "1.0.0",
  "scripts": {
    "build": "zip -r nitter-redirect.zip . -x \"./node_modules/**\" \"./node_modules/*\" \"./.git/*\" \"./img/screenshot.png\" \"./.gitignore\" \"./package.json\" \"./package-lock.json\" \"./_metadata/**\" \"./_metadata/*\"",
    "start": "npx web-ext run --target=chromium",
    "clean": "rm nitter-redirect.zip"
  },
  "devDependencies": {
    "web-ext": "^7.12.0"
  }
}
