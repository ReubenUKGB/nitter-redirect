{
  "name": "Nitter Redirect",
  "description": "Ensures requests to X redirect to Nitter (a privacy friendly alternative), via a regex-based declarative ruleset (no client-side scripts).",
  "version": "1.0.0",
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "{9063c2e9-e07c-4c2c-9646-cfe7ca8d0498}",
      "strict_min_version": "130.0"
    }
  },
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "64": "img/icon64.png",
    "96": "img/icon96.png",
    "128": "img/icon128.png"
  },
  "permissions": ["declarativeNetRequestWithHostAccess"],
  "host_permissions": [
    "*://x.com/*",
    "*://www.x.com/*",
    "*://mobile.x.com/*",
    "*://pbs.twimg.com/*",
    "*://video.twimg.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "nitter_redirect_ruleset",
        "enabled": true,
        "path": "nitter_rules.json"
      }
    ]
  }
}
